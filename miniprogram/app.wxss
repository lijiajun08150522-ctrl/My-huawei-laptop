/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  padding: 20rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.btn {
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}

.btn-danger {
  background: #ff4d4f;
  color: #fff;
}

.btn-success {
  background: #52c41a;
  color: #fff;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.task-item.completed {
  opacity: 0.6;
}

.task-checkbox {
  margin-right: 20rpx;
}

.task-content {
  flex: 1;
}

.task-desc {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.task-status {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.task-status.completed {
  color: #52c41a;
}

.task-actions {
  display: flex;
  gap: 16rpx;
  margin-left: 20rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

.stats-card {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.stats-number {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1.2;
}

.stats-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-top: 8rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.form-input {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
}

.form-input:focus {
  border-color: #1890ff;
  background: #fff;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}
